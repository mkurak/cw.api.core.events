#!/usr/bin/env bash

set -euo pipefail

run_step() {
    local description="$1"
    shift
    printf '\n[cw.api.core.events] %s...\n' "$description"
    if ! "$@"; then
        printf '\n[cw.api.core.events] ERROR: %s failed (command: %s)\n' "$description" "$*" >&2
        exit 1
    fi
}

run_step "Formatting sources" npm run format

git add --all

run_step "Running lint checks" npm run lint
run_step "Running coverage checks" npm run test:coverage

printf '\n[cw.api.core.events] Pre-commit checks passed.\n'
exit 0
